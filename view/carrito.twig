<div id="modalCliente" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Datos del plato</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--- cuerpo del modal--->
                <form>
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input class="form-control" type="text" id="nombre" required>
                    </div>
                    <div class="form-group">
                        <label for="apellidos">Apellidos:</label>
                        <input class="form-control" type="text" id="apellidos" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input class="form-control" type="text" id="email" required>
                    </div>
                    <div class="form-group">
                        <label for="calendario">Seleccione la fecha de recogida:</label>
                        <input class="form-control" type="calendar" id="calendario" required>
                    </div>

                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="estado" checked required>
                        <label class="form-check-label" for="estado">Acepto el <a href="#" target="_blank">RGPD</a> y las <a href="#" target="_blank">Condiciones Generales de compra</a></label>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-secondary" id="cancelarCliente" value="Cancelar">
                        <input type="button" class="btn btn-primary" id="confirmarCliente" value="Confirmar">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>