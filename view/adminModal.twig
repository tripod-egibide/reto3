{% include "errorModal.twig" %}
<div id="modalModificarPlato" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Datos del plato</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--- cuerpo del modal--->
                <form id="idPlatoModal" class="needs-validation" novalidate>
                    <div class="form-row" id="zonaImagen">
                        <div class="offset-2 col-8 img-thumbnail" >
                            <img src="/reto3/img/logo-restaurant.png" class="img-fluid"
                                 alt="Escuela de Hosteler&iacute;a de Egibide" id="imagen">
                        </div>
                        <div class="col-md-12">
                            <input type="file" name="modificarImagen" class="form-control-file" id="modificarImagen"
                                   accept="image/*" value="Modificar Imagen">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12">
                            <label for="nombrePlato">Nombre:</label>
                            <input class="form-control" type="text" id="nombrePlato" required>
                            <div class="invalid-feedback">
                                Debes introducir el nombre del plato.
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="descripcionPlato">Descripci&oacute;n:</label>
                            <input class="form-control" type="text" id="descripcionPlato">
                        </div>
                        <div class="col-md-6">
                            <label for="precioPlato" id="labelPrecio">Precio:</label>
                            <input class="form-control" type="number" id="precioPlato" step="0.01" min="0" required>
                            <div class="invalid-feedback">
                                Debes introducir el precio del plato.
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="cantidadPlato" id="labelCantidad">Pedido m&iacute;nimo:</label>
                            <input class="form-control" type="number" id="cantidadPlato" min="1" required>
                            <div class="invalid-feedback">
                                Debes introducir el pedido m&iacute;nimo del plato.
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="medida">Formato de la medida</label>
                            <select id="medida" class="form-control" required>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="categoria">Categoria</label>
                            <select id="categoria" class="form-control" class="form-control" required>
                                {% for key, categoria in categorias %}
                                    <option class="cat" value="{{ key }}">{{ categoria.nombre }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="estadoPlato" checked>
                        <label class="form-check-label" for="estado">Mostrar el Plato</label>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-secondary" data-dismiss="modal" id="cancelarPlato"
                               value="Cancelar">
                        <input type="button" class="btn btn-danger" id="EliminarPlato" value="Eliminar">
                        <input type="submit" class="btn btn-primary" id="modificarPlato" value="Confirmar">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

