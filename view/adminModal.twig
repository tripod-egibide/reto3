
<div id="modalModificarPlato" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Datos del plato</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--- cuerpo del modal--->
                <div class="row">
                    <form>
                        <div class="form-group">
                            <img src="" class="img-fluid" alt="Responsive image" id="imagen">
                        </div>
                        <div class="form-group">
                            <label class="col-4" for="nombre">Nombre:</label>
                            <input type="text" id="nombre" required>
                        </div>
                        <div class="form-group">
                            <label class="col-4" for="descripcion">Descripci&oacute;n:</label>
                            <input type="text" id="descripcion" required>
                        </div>
                        <div class="form-group">
                            <label class="col-4" for="precio">Precio:</label>
                            <input type="text" id="precio" required>
                        </div>
                        <div class="form-group">
                            <label class="col-4" for="cantidad">Pedido m&iacute;nimo:</label>
                            <input type="text" id="cantidad" required>
                        </div>
                        <div class="form-group">
                            <label class="col-4" for="imagen">Imagen:</label>
                            <input type="button" class="btn btn-primary" id="modificarImagen" value="Modificar Imagen">
                        </div>
                        <div class="form-group">
                            <label for="medida">Formato de la medida</label>
                            <select id="medida" class="form-control" required>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="categoria">Categoria</label>
                            <select id="categoria" class="form-control" required>
                                {% for categoria in categorias %}
                                    <option id="cat{{ categoria }}">{{ categoria.nombre }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-primary" id="modificarPlato" value="Confirmar">
            </div>
        </div>
    </div>
</div>

<div id="modalEliminarPlato" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Eliminar Plato</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--- cuerpo del modal--->
                <label id="atencion"></label>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-danger" id="eliminarPlato" value="Confirmar">
            </div>
        </div>
    </div>
</div>