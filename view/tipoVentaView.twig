{% extends "base.twig" %}

{% block titulo %}
    Tipos de venta
{% endblock titulo %}

{% block cuerpo %}

    {% include "navbar.twig" %}

    <main class="container">
        <div class="row my-3">
            <div class="col">
                <h3 class="text-primary">Tipos de venta</h3>
            </div>
            <div class="col">
                <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#altaTipoVentaModal">
                    <i class="material-icons align-bottom">add</i>
                </button>
            </div>
        </div>
        {% if tiposVenta|length > 0 %}
            <div class="table-responsive-md">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Tipo de venta</th>
                        <th scope="col">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for tipoVenta in tiposVenta %}
                        <tr>
                            <td scope="row"><span id="tipoVenta{{ tipoVenta.idTipoVenta }}">{{ tipoVenta.tipoVenta }}</span></td>
                            <td><button class="btn btn-primary editarTipoVenta" type="button" value="{{ tipoVenta.idTipoVenta }}" data-toggle="modal" data-target="#editarTipoVentaModal"><i class="material-icons align-bottom">edit</i></button>
                                <a href="index.php?c=tipoventa&a=remove&tipoVenta={{ tipoVenta.idTipoVenta }}" class="btn btn-danger ml-1" role="button"><i class="material-icons align-bottom">delete</i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </main>

    <footer class="d-flex text-muted border-top mt-2">
        <p class="col d-flex justify-content-center align-items-center px-0 my-auto"><i class="material-icons">copyright</i>
            2019 Tripod, Inc.</p>
        <div class="col d-flex justify-content-center align-items-center px-0 my-auto">
            <a href="https://github.com/tripod-egibide/reto3" target="_blank" class="text-muted"><i class="material-icons align-middle">code</i></a>
            <a href="/Documentacion/Manual%20del%20Usuario.pdf" id="ayuda" target="_blank" class="text-muted"><i class="material-icons align-middle">help_outline</i></a>
            <a id="email" href="mailto:tripod@tripod.com" class="text-muted"><i class="material-icons align-middle">email</i></a>
        </div>
    </footer>
    {% include "tipoVentaModal.twig" %}
{% endblock cuerpo %}