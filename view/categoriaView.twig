{% extends "base.twig" %}

{% block titulo %}
    Categor&iacute;as
{% endblock titulo %}

{% block cuerpo %}

    {% include "navbar.twig" %}

    <main class="container">
        <br />
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#altaCategoriaModal">
            <i class="material-icons align-bottom">add</i>
        </button>
        {% if categorias|length > 0 %}
            <div class="table-responsive-md">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Correo electr&oacute;nico del departamento</th>
                        <th scope="col">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for categoria in categorias %}
                        <tr>
                            <td scope="row"><span id="nombre{{ categoria.idCategoria }}">{{ categoria.nombre }}</span></td>
                            <td><span id="emailDepartamento{{ categoria.idCategoria }}">{{ categoria.emailDepartamento }}</span></td>
                            <td><button class="btn btn-primary editarCategoria" type="button" value="{{ categoria.idCategoria }}" data-toggle="modal" data-target="#editarCategoriaModal"><i class="material-icons align-bottom">edit</i></button>
                                <a href="index.php?c=categoria&a=remove&categoria={{ categoria.idCategoria }}" class="btn btn-danger ml-1" role="button"><i class="material-icons align-bottom">delete</i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </main>

    <footer class="d-flex text-muted border-top mt-2">
        <p class="col d-flex justify-content-center align-items-center px-0 my-auto"><i class="material-icons">copyright</i>
            2019 Tripod, Inc.</p>
        <div class="col d-flex justify-content-center align-items-center px-0 my-auto">
            <a href="https://github.com/tripod-egibide/reto3" target="_blank" class="text-muted"><i class="material-icons align-middle">code</i></a>
            <a href="/Documentacion/Manual%20del%20Usuario.pdf" id="ayuda" target="_blank" class="text-muted"><i class="material-icons align-middle">help_outline</i></a>
            <a id="email" href="mailto:tripod@tripod.com" class="text-muted"><i class="material-icons align-middle">email</i></a>
        </div>
    </footer>
    {% include "categoriaModal.twig" %}
{% endblock cuerpo %}